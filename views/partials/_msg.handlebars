{{#if success_msg}}
<div class="alert alert-success"><button type="button" class="close" data-dismiss="alert">×</button><i
                class="icon-ok icon-white"></i>{{success_msg}}
</div>
{{/if}}

{{#if info_msg}}
<div class="alert alert-info"><button type="button" class="close" data-dismiss="alert">×</button><i
                class="icon-exclamation-sign icon-white"></i>{{info_msg}}</div>
{{/if}}

{{#if error_msg}}
<div class="alert alert-danger"><button type="button" class="close" data-dismiss="alert">×</button><i
                class="icon-ban-circle icon-white"></i>{{error_msg}}</div>
{{/if}}